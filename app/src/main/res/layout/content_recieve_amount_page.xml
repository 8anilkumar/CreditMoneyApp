<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".RecieveAmountPage"
    tools:showIn="@layout/activity_recieve_amount_page">


    <EditText
        android:id="@+id/txt_recieve"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="Add Credit"
        android:inputType="number"
        android:text="\u20B9"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1" />

    <Button
        android:id="@+id/btn_calender_recieve"
        android:layout_width="226dp"
        android:layout_height="35dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/btncalender"
        android:drawableLeft="@drawable/ic_calender"
        android:drawableRight="@drawable/ic_expand_bellow"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_recieve"
        app:layout_constraintVertical_bias="0.0" />


    <EditText
        android:id="@+id/add_text_recieve"
        android:layout_width="282dp"
        android:layout_height="41dp"
        android:background="@drawable/btncalender"
        android:drawableLeft="@drawable/ic_create_text"
        android:drawableRight="@drawable/ic_camera"
        android:drawablePadding="15dp"
        android:ems="10"
        android:hint="Add Note (Optional)"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        android:paddingRight="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.279"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_calender_recieve"
        app:layout_constraintVertical_bias="0.248" />

    <Button
        android:id="@+id/conferm_amount_recieve"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/ic_check_circle_12"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.567"
        app:layout_constraintStart_toEndOf="@+id/add_text_recieve"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.472" />


</androidx.constraintlayout.widget.ConstraintLayout>