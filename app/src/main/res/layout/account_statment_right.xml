<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">


    <LinearLayout
        android:padding="5dp"
        android:gravity="right"
        android:layout_gravity="right"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:background="@drawable/btncalender"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:text="amount"
                android:id="@+id/discription"
                android:layout_gravity="left"
                android:textColor="#C9C8C5"
               android:layout_marginRight="20dp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13dp" />

            <LinearLayout
                android:layout_marginTop="1dp"
                android:layout_gravity="left"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textStyle="bold"
                    android:id="@+id/txtgive"
                    android:layout_gravity="left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:textSize="16dp" />
                <TextView
                    android:id="@+id/amount_given_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:paddingLeft="20dp"
                    android:text="10:39PM"
                    android:textSize="10dp" />

                <TextView
                    android:id="@+id/amount_given_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:paddingLeft="5dp"
                    android:text="10:39PM"
                    android:layout_marginRight="30dp"
                    android:textSize="10dp" />

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_marginTop="4dp"
            android:layout_marginRight="10dp"
            android:textColor="#CFCDC6"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:id="@+id/status_amount"
            android:layout_height="wrap_content"
            android:textStyle="normal"
            />
    </LinearLayout>

</LinearLayout>
