<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Payment_Account_Data"
    tools:showIn="@layout/activity_payment__account__data">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <Button
            android:id="@+id/accept_payment"
            android:drawableLeft="@drawable/ic_cloud_buttom"
            android:drawablePadding="8dp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="14dp"
            android:background="@drawable/corner_btn"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center_vertical"
            android:layout_width="130dp"
            android:layout_height="35dp"
            android:text="ACCEPT PAYMENT"/>

        <Button
            android:id="@+id/get_payment"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginLeft="2dp"
            android:drawablePadding="8dp"
            android:textSize="14dp"
            android:drawableRight="@drawable/ic_cloud"
            android:background="@drawable/corner_btn"
            android:layout_gravity="center_vertical"
            android:layout_width="130dp"
            android:layout_height="35dp"
            android:text="GIVE CREDIT"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>